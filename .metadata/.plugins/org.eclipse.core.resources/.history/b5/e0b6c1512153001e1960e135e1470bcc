package main;

import java.util.Scanner;

public class Main {

	static Scanner sc = new Scanner(System.in);

	public static void main(String[] args) {
		double a, b;
		System.out.println("Nhập vào hai số nguyên a và b: ");
		a = sc.nextDouble();
		b = sc.nextDouble();
		System.out.println("Nhập vào lựa chọn: 'A', 'S', 'M', 'D'");
		Character input = sc.next().charAt(1);

		switch (input) {

		case 'A': {
			double result = a + b;
			System.out.print("a + b = " + result);
		}

		case 'S': {
			double result = a - b;
			System.out.print("a - b = " + result);
		}

		case 'M': {
			double result = a * b;
			System.out.print("a x b = " + result);
		}

		case 'D': {
			double result = a / b;
			System.out.print("a : b = " + result);
		}

		default: {
			System.out.println("Ký tự nhập vào không hợp lệ!!!");
		}

		}
	}

}
